<div class="center">
<<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-sm-4">
      <div class="thumbnail">
        <%= image_tag listing.image.url %>
        <div class="caption">
          <h3><%= listing.Name %></h3>
          <p><%= listing.Description %></p>
          <p><%= number_to_currency(listing.Daily_Rental_Price) %></p>
          <p><%= number_to_currency(listing.Weekly_Rental_Price) %></p>
          <%= link_to 'Show', listing, class: "btn btn-link" %>
          <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
          <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
  </div>
      </div>
    </div>
  <% end %>
 </div>
</div>

<br>

<%= link_to "New Listing", new_listing_path, class: "btn btn-link" %>


