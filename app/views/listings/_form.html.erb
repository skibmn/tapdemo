    <%= form.label :Description %>
    <%= form.text_area :Description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Email %>
    <%= form.text_field :Email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Address %>
    <%= form.text_area :Address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Daily_Rental_Price %>
    <%= form.text_field :Daily_Rental_Price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Weekly_Rental_Price %>
    <%= form.text_field :Weekly_Rental_Price, class: "form-control" %>
  </div>

   <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
